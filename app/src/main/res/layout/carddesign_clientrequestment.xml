<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="430dp">

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="250dp"
        app:cardMaxElevation="300dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Client Request"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp"
                android:textAlignment="center"/>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/clientname"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:text="CLIENT NAME"
                   android:textColor="#000"
                   android:textSize="16dp"
                   android:textStyle="bold" />

               <Button
                   android:background="@drawable/login_button_design"
                   android:layout_width="100dp"
                   android:layout_height="30dp"
                   android:text="Edit"
                   android:textColor="#FF00"
                   android:layout_alignParentRight="true"
                   android:id="@+id/clientrequestedit"/>

           </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/clientPnone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:text="CLIENT Phone Number"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:background="@drawable/login_button_design"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Delete"
                    android:textColor="#FF00"
                    android:layout_alignParentRight="true"
                    android:id="@+id/clientrequestdelete"/>


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:elevation="250dp"
                app:cardBackgroundColor="#FF00"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="300dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/clientRequirement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="CLIENT Requirement"
                        android:textColor="#FFF"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/clientRequireRent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Require Rent"
                        android:textColor="#FFF"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/clientOccupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="CLIENT Occupation"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clientFamilyMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="CLIENT Family member"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clientSectorRequire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="CLIENT Require Sector (optional)"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Click here if this customer request is complete => "
                    android:textAlignment="center"
                    android:textColor="#FF00"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/statusOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/thumbs_up"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/statuspending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/cancel" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:gravity="center" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>