<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="70dp"
    app:cardMaxElevation="100dp"
    android:layout_height="wrap_content">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:gravity="center_horizontal"
               android:text="EDIT CLIENT REQUEST SECTION"
               android:textAlignment="center"
               android:textColor="#000"
               android:textSize="20sp"
               android:textStyle="bold" />

           <RelativeLayout

               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:layout_marginLeft="5dp"
               android:layout_marginTop="30dp"
               android:background="@drawable/nav_continue_go_btn_design">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="5dp"
                   android:text="Client Name"
                   android:textColor="#000"
                   android:textSize="16sp"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/name_clients"
                   android:layout_width="210dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginRight="15dp"
                   android:gravity="center_horizontal"
                   android:hint="Client Name"
                   android:singleLine="true"
                   android:textAlignment="center"
                   android:textColor="#000"
                   android:textStyle="bold" />

           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:layout_marginLeft="5dp"
               android:layout_marginTop="5dp"
               android:background="@drawable/nav_continue_go_btn_design">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="5dp"
                   android:text="Client Phone"
                   android:textColor="#000"
                   android:textSize="16sp"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/Phone_clients"
                   android:layout_width="210dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerInParent="true"
                   android:layout_marginRight="15dp"
                   android:gravity="center_horizontal"
                   android:hint="Client Number"
                   android:inputType="number"
                   android:singleLine="true"
                   android:textAlignment="center"
                   android:textColor="#000"
                   android:textStyle="bold" />

           </RelativeLayout>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               app:cardCornerRadius="20dp"
               app:cardElevation="50dp"
               app:cardMaxElevation="60dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical"
                   android:padding="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="5dp"
                       android:text="Client Requirement"
                       android:textColor="#000"
                       android:textSize="16sp"
                       android:textStyle="bold" />

                   <EditText
                       android:id="@+id/client_Requirements"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_centerInParent="true"
                       android:layout_gravity="center"
                       android:layout_marginTop="20dp"
                       android:layout_marginRight="5dp"
                       android:gravity="center_horizontal"
                       android:hint="Client Requirement"
                       android:maxLength="200"
                       android:textAlignment="center"
                       android:textColor="#000"
                       android:textStyle="bold" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="5dp"
                       android:layout_marginTop="10dp"
                       android:text="Client Request Rent"
                       android:textColor="#000"
                       android:textSize="16sp"
                       android:textStyle="bold" />

                   <EditText
                       android:id="@+id/client_rents"
                       android:layout_width="250dp"
                       android:layout_height="50dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerInParent="true"
                       android:layout_gravity="center"
                       android:layout_marginTop="20dp"
                       android:layout_marginRight="5dp"
                       android:gravity="center_horizontal"
                       android:hint="Rent Range/ Rent"
                       android:maxLength="200"
                       android:textAlignment="center"
                       android:textColor="#000"
                       android:textStyle="bold" />

               </LinearLayout>


           </androidx.cardview.widget.CardView>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:padding="10dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="5dp"
                   android:text="Client Occupation"
                   android:textColor="#000"
                   android:textSize="16sp"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/clinet_Occupation_detailss"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerInParent="true"
                   android:layout_gravity="center"
                   android:layout_marginTop="20dp"
                   android:layout_marginRight="5dp"
                   android:gravity="center_horizontal"
                   android:hint="Occupation details"
                   android:maxLength="200"
                   android:textAlignment="center"
                   android:textColor="#000"
                   android:textStyle="bold" />


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:padding="10dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="5dp"
                   android:text="Client Family Member"
                   android:textColor="#000"
                   android:textSize="16sp"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/client_familyMembers"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerInParent="true"
                   android:layout_gravity="center"
                   android:layout_marginTop="20dp"
                   android:layout_marginRight="5dp"
                   android:gravity="center_horizontal"
                   android:hint="Family Member Details"
                   android:maxLength="200"
                   android:textAlignment="center"
                   android:textColor="#000"
                   android:textStyle="bold" />


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:padding="10dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="5dp"
                   android:text="Client Require sector (optional)"
                   android:textColor="#000"
                   android:textSize="16sp"
                   android:textStyle="bold" />

               <EditText
                   android:id="@+id/client_require_sectors"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerInParent="true"
                   android:layout_gravity="center"
                   android:layout_marginTop="20dp"
                   android:layout_marginRight="5dp"
                   android:gravity="center_horizontal"
                   android:hint="Client Require sector (optional)"
                   android:maxLength="200"
                   android:textAlignment="center"
                   android:textColor="#000"
                   android:textStyle="bold" />


           </LinearLayout>

           <Button
               android:id="@+id/clintRequestUploads"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Upload" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="10dp" />

       </LinearLayout>


   </ScrollView>

</androidx.cardview.widget.CardView>