<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="50dp"
        app:cardMaxElevation="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Phone Authentication"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                android:id="@+id/ccp_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp" />

            <EditText
                android:id="@+id/user_phone_otp_pop"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="10dp"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/progressBar_for_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone">

            </ProgressBar>

            <TextView
                android:id="@+id/SendingOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Resend"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="gone">

            </TextView>

            <LinearLayout
                android:id="@+id/OTP_liner_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="20dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/otpNumberOne"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="auto"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/optNumberTwo"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/otpNumberThree"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/otpNumberFour"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/otpNumberFive"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/optNumberSix"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true" />


            </LinearLayout>


            <Button
                android:id="@+id/phone_auth_btn_pop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Next"
                android:textColor="#FF00"
                android:textSize="25sp"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/POP_phone_auth_resend_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Resend"
                android:textColor="#Ff00"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone">

            </Button>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="You can Regenerate the OTP After 60 Seconds."
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>